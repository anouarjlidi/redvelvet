</head>
<body>

    {% block body %}{% endblock %}

    <script type="application/javascript" src="{{ asset("js/appear-animation.js") }}"></script>
    <script type="application/javascript" src="{{ asset("js/notification.js") }}"></script>

    <script type="application/javascript" src="{{ asset("js/dropdown.js") }}"></script>
    <script type="application/javascript" src="{{ asset("js/mobile-navigation.js") }}"></script>
    {% block javascripts %}{% endblock %}

</body>
</html>
