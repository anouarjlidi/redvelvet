{% extends "public/page-base.html.twig" %}

{% block pageStylesheets %}

    <link rel="stylesheet" href="{{ asset('css/public/item.css') }}">
    <link rel="stylesheet" href="{{ asset('css/public/page-base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/public/pagination.css') }}">
    <link rel="stylesheet" href="{{ asset('css/public/deep-navigation.css') }}">
    <link rel="stylesheet" href="{{ asset('css/public/modal.css') }}">

{% endblock %}

{% block content %}

    <main>

        <section id="products">

            {% include 'public/deep-navigation.html.twig' %}

            <h2>{{ category.title }}</h2>

            {% include 'public/products/sections/products.html.twig' %}
            {% include 'public/products/sections/pagination.html.twig' %}

            {% include 'public/modals/add-to-cart.html.twig' %}
            <div class="modal-background"></div>

        </section>

    </main>

{% endblock %}

{% block javascripts %}

    <script type="application/javascript" src="{{ asset("js/product-modal.js") }}"></script>

{% endblock %}