{% extends "public/page-base.html.twig" %}

{% block pageStylesheets %}

    <link rel="stylesheet" href="{{ asset('css/public/page-base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/public/course.css') }}">

{% endblock %}

{% block content %}

    <main>

        <section id="course">

            <h2>Mokymai</h2>

            <div class="date">

                {{ course.date | date('Y-m-d H:i') }}

            </div>

            <div class="content">

                <div class="photo">

                    <img src="{{ asset(course.photo) }}">

                </div>

                <div class="description">

                    <h3>{{ course.title }}</h3>

                    <p>p{{ course.description }}</p>

                    <div class="price">

                        <label>{{ course.price }} <sup>â‚¬/vnt.</sup></label>

                    </div>

                    <a class="button" href="/course/{{ course.id }}/registration">Registracija</a>

                </div>

            </div>

        </section>

    </main>

{% endblock %}