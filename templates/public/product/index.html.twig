{% extends "public/page-base.html.twig" %}

{% block pageStylesheets %}

    <link rel="stylesheet" href="{{ asset('css/page-base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/product.css') }}">

{% endblock %}

{% block content %}

    <main>

        <section id="product">

            <h2>Produktas</h2>

            <div id="photos">

                <div class="main-photo">

                    <img src="{{ asset(product.photo) }}">

                </div>

            </div>

            <div id="description">

                <h3>{{ product.title }}</h3>

                <p>{{ product.description }}</p>

                <div class="price">

                    <label>{{ product.price }} <sup>€/kg.</sup></label>

                </div>

                <div class="quantity">

                    <label>Kiekis : </label>
                    <input type="number">

                </div>

                <button>Pridėti į krepšelį</button>

            </div>

        </section>

    </main>

{% endblock %}