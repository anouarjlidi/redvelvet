<section id="categories" class="dark-section section">

    <div>

        <h2 class="animated-element">Produkt≈≥ kategorijos</h2>

    </div>

    <div>

        {% for category in categories %}

            <div class="item animated-element">

                <div class="photo">

                    {% if category.children | length > 0 %}

                        <a href="/categories/{{ category.id }}">

                            <img alt="{{ category.title }}" src="{{ asset('photos/'~category.photo) }}">

                        </a>

                    {% else %}

                        <a href="/products/{{ category.id }}/1">

                            <img alt="{{ category.title }}" src="{{ asset('photos/'~category.photo) }}">

                        </a>

                    {% endif %}



                </div>

                <div class="description">

                    {% if category.children | length > 0 %}

                        <a href="/categories/{{ category.id }}"><h3>{{ category.title }}</h3></a>

                    {% else %}

                        <a href="/products/{{ category.id }}/1"><h3>{{ category.title }}</h3></a>

                    {% endif %}

                    <p>{{ category.description }}</p>

                </div>

            </div>

        {% endfor %}

    </div>

    <div class="cake-logo">

        <img src="{{ asset("img/cake.svg") }}">

    </div>

</section>