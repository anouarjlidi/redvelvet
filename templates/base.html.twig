    <script type="application/javascript" src="{{ asset("js/notification.js") }}"></script>
    <script type="application/javascript" src="{{ asset("js/cart.js") }}"></script>
    <script type="application/javascript" src="{{ asset("js/mobile-navigation.js") }}"></script>
    {% block javascripts %}{% endblock %}

</body>
</html>
