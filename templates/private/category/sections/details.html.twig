<div class="details">

    <div class="content">

        <div class="row">

            <div class="col-4">

                <label>Nuotrauka</label>
                <img src="{{ asset(category.photo) }}">

            </div>

            <div class="col-8">

                <div class="row">

                    <div class="col-6">
                        <label>Id</label>
                        <i class="material-icons">security</i><strong>{{ category.id }}</strong>
                    </div>

                    <div class="col-6">
                        <label>Pavadinimas</label>
                        <i class="material-icons">title</i><strong>{{ category.title }}</strong>
                    </div>

                </div>

                <div class="row">

                    {% if category.parent %}

                        <div class="col-6">
                            <label>Tėvinė kategorija</label>
                            <i class="material-icons">label</i><strong>{{ category.parent.title }}</strong>
                        </div>

                    {% else %}

                        <div class="col-6">
                            <label>Tėvinė kategorija</label>
                            <i class="material-icons">label</i><strong>Nėra</strong>
                        </div>

                    {% endif %}

                    <div class="col-6">
                        <label>Sukūrimo data</label>
                        <i class="material-icons">date_range</i><strong>{{ category.date | date() }}</strong>
                    </div>

                </div>

                <div class="row description">

                    <div class="col">
                        <label>Aprašymas</label>
                        <i class="material-icons">assignment</i><strong>{{ category.description }}</strong>
                    </div>

                </div>

            </div>

        </div>

    </div>

    <div class="footer">

        <div class="row">

            <div class="col">
                <a class="btn btn-sm btn-primary float-right" href="/admin/category/edit/{{ category.id }}">Redaguoti</a>
                <button class="mr-2 btn btn-sm btn-secondary float-right">Ištrinti</button>
            </div>

        </div>

    </div>

</div>