{% extends "private-base.html.twig" %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('css/private/navigation.css') }}">
    <link rel="stylesheet" href="{{ asset('css/private/side-navigation.css') }}">
    <link rel="stylesheet" href="{{ asset('css/private/base.css') }}">
    <link rel="stylesheet" href="{{ asset('css/private/layout.css') }}">
    {% block pageStylesheets %}{% endblock %}

{% endblock %}

{% block body %}

    {% include 'private/navigation.html.twig' %}

    <div class="container-fluid">

        <div class="row">

            {% include 'private/side-navigation.html.twig' %}

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">

                {% block content %}{% endblock %}

            </main>

        </div>

    </div>

    {% include 'private/notifications.html.twig' %}

{% endblock %}

{% block javascripts %}{% endblock %}