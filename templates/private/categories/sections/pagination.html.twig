{% if pagesCount > 1 %}

    <tr class="footer-row">

        <td colspan="8">

            <div class="pagination-container">

                <div class="total">

                    <span>Total: {{ total }}</span>

                </div>

                <div class="pagination">

                    {% if page > 1 %}

                        <a href="/admin/categories/1">
                            <i class="material-icons">first_page</i>
                        </a>

                        <a href="/admin/categories/{{ pagesCount-1 }}">
                            <i class="material-icons">keyboard_arrow_left</i>
                        </a>

                    {% endif %}

                    <div class="pages">

                        {% for i in 1..pagesCount %}
                            <a href="/admin/categories/{{ i }}" {% if i == page %}class="active"{% endif %}>{{ i }}</a>
                        {% endfor %}

                    </div>

                    {% if page < pagesCount %}

                        <a href="/admin/categories/{{ page+1 }}">
                            <i class="material-icons">keyboard_arrow_right</i>
                        </a>

                        <a href="/admin/categories/{{ pagesCount }}">
                            <i class="material-icons">last_page</i>
                        </a>

                    {% endif %}

                </div>

            </div>

        </td>

    </tr>

{% endif %}